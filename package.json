{
  "name": "chahua-code-animator",
  "version": "1.0.0",
  "type": "module",
  "description": "Professional code animation and visualization tool with enterprise-grade security",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "node test/security-test.js"
  },
  "keywords": [
    "code-animation",
    "code-visualization",
    "electron",
    "security",
    "chahuadev"
  ],
  "author": "Chahua Development Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chahuadev/chahua-code-animator.git"
  },
  "build": {
    "appId": "com.chahuadev.code-animator",
    "productName": "Chahua Code Animator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!test/**/*",
      "!logs/**/*"
    ],
    "win": {
      "target": ["nsis", "portable"],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  },
  "dependencies": {
    "electron": "^28.0.0"
  },
  "devDependencies": {
    "electron-builder": "^24.9.1"
  }
}
