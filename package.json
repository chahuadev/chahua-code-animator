{
  "name": "@chahuadev/code-animator",
  "version": "1.1.0",
  "type": "module",
  "description": "Professional code animation and visualization tool with enterprise-grade security",
  "main": "main.js",
  "bin": {
    "chahua-code-animator": "cli.js"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "powershell -NoProfile -Command \"$env:COMMIT_HASH=(git rev-parse --short HEAD); electron-builder --win --publish never\"",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist:win": "powershell -NoProfile -Command \"$env:COMMIT_HASH=(git rev-parse --short HEAD); npm run dist:win:exec; node workspace/collect-release-metrics.js windows\"",
    "dist:win:exec": "electron-builder --win --publish never",
    "test": "node test/security-test.js"
  },
  "keywords": [
    "code-animation",
    "code-visualization",
    "electron",
    "security",
    "chahuadev"
  ],
  "author": "Chahua Development Co., Ltd.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chahuadev/chahua-code-animator.git"
  },
  "files": [
    "cli.js",
    "main.js",
    "package.json",
    "preload.js",
    "renderer/",
    "security-core.js",
    "workspace/"
  ],
  "build": {
    "appId": "com.chahuadev.code-animator",
    "productName": "Chahua Code Animator",
    "artifactName": "${productName}-${version}-${os}-${arch}-${env.COMMIT_HASH}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!test/**/*",
      "!logs/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "msi",
          "arch": ["x64", "ia32"]
        }
      ],
  "icon": "logo.png",
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": ["sha256"],
      "sign": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Chahua Code Animator",
      "include": "build/installer.nsh"
    },
    "msi": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
  "icon": "logo.png",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
  "icon": "logo.png",
      "category": "Development"
    }
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}
